---
import "../css/global.css";
import "../css/layout.css";
import Nav from "../components/Nav.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <div class="main">
            <Nav />
            <slot />
        </div>
    </body>
</html>
